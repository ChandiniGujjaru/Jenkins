pipeline {
  agent none
  stages {
    stage('Back-end') {
      agent {
        docker { image 'maven:3.9.5-openjdk-17-slim' }
      }
      steps {
        sh 'mvn --version'
      }
    }
    stage('Front-end') {
      agent {
        docker { image 'node:18-alpine' }
      }
      steps {
        sh 'node --version'
      }
    }
  }
}
